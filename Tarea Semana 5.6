import java.util.Arrays;
import java.util.List;

public class ProductoEscalar {
    public static void main(String[] args) {
        //pongo vectores como listas
        List<Integer> vector1 = Arrays.asList(1, 2, 3);
        List<Integer> vector2 = Arrays.asList(-1, 0, 2);
        
        //dimension de vectores
        if (vector1.size() != vector2.size()) {
            System.out.println("Porfis los vectores deben tener la misma dimensi√≥n");
            return;
        }
        
        //producto
        int producto = 0;
        for (int i = 0; i < vector1.size(); i++) {
            producto += vector1.get(i) * vector2.get(i);
        }
        
        //pongo el resultado
        System.out.println("Vector 1: " + vector1);
        System.out.println("Vector 2: " + vector2);
        System.out.println("Producto escalar: " + producto);
    }
}
