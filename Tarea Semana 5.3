import java.util.Scanner;

public class PalindromoCheckerSimple {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Ingrese una palabra: ");
        String palabra = scanner.nextLine().toLowerCase().replaceAll("\\s+", "");
        
        String reversa = new StringBuilder(palabra).reverse().toString();
        
        if (palabra.equals(reversa)) {
            System.out.println("Super bien, sabes que tu palabra seleccionada es palíndromo");
        } else {
            System.out.println("Excelente, aunque tu eleccion no es palíndromo");
        }
        
        scanner.close();
    }
}
